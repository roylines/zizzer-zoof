<div class="row">
  <div class="small-12 large-offset-3 large-6 columns">
    <form name="details">
      <fieldset ng-disabled="busy">
        <legend>Sign up</legend>
        <input ng-model="email" ng-change="error = null" type="email" placeholder="Email" autofocus required/>

        <input ng-model="password" tng-change="error = null" type="password" placeholder="Password" required/>
        <small ng-show="error" ng-bind="error" class="error"></small>

        <input ng-model="postcode" ng-change="error = null" type="text" placeholder="Postcode" required/>
        <button ng-hide="formatted_address" ng-click="search(postcode)" ng-disabled="!details.$valid"i>Sign up</button>
        <a ng-hide="formatted_address" href="/login">or sign in</a>
        <div ng-show="formatted_address" data-alert class="alert-box success radius">
          Is this the correct address for your postcode:<br/> 
          <span>{{ formatted_address }}</span>?
        </div>
        <map/>

      </fieldset>
    </form>
  </div>
</div>
